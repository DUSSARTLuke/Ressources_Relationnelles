<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>
        {% block title %}Resources Relationnelles
        {% endblock %}
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    {% block stylesheets %}
    {% endblock %}
    {{ encore_entry_link_tags('app') }}

    {% block javascripts %}
    {% endblock %}
    <link rel="manifest" href="{{ asset('manifest.json') }}">
    <link rel="apple-touch-icon" href="{{ asset('images/logo-app.png') }}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="white">
    <meta name="apple-mobile-web-app-status-bar" content="white">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
</head>
<header>
    {% include 'includes/navbar.html.twig' %}
</header>
{% for message in app.flashes('warning') %}
    <div class="alert alert-danger" style="margin: 0 !important" role="alert">
        {{ message }}
    </div>
{% endfor %}
{% for message in app.flashes('success') %}
    <div class="alert alert-success" style="margin: 0 !important" role="alert">
        {{ message }}
    </div>
{% endfor %}
<body>
{#<div class="container marge-bottom">#}
    {% block body %}

    {% endblock %}
{#</div>#}
</body>
<footer class="footer mt-auto py-3 bg-light"> Resources relationnelles</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
<script src="https://kit.fontawesome.com/133eea8462.js" crossorigin="anonymous"></script>
<script src="{{ asset("js/app.js") }}"></script>
</html>
