<div class="modal fade" id="updateCommentModal-{{ comment.id }}" tabindex="-1" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header header-modal">
                <h5 class="modal-title" id="exampleModalLabel">Modifier un commentaire</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {% if comment.parent is not null %}
                    <h6 class="blue-text">Commentaire parent</h6>
                    <div>
                        <div class="card justify-content-center bg-light">
                            <div class="card-body">
                                <p>{{ comment.parent.user.username }} - {{ comment.parent.createdAt }}</p>
                                <p class="mb-0">{{ comment.parent.content }}</p>
                            </div>
                        </div>
                    </div>
                {% endif %}
                <div class="mt-1">
                    <h6 class="blue-text">Commentaire Ã  valider</h6>
                    {% set submit_url = path('comment_admin_list', {id: comment.id}) %}
                    {{ render(controller('App\\Controller\\Admin\\CommentController::updateComment',
                        {id: comment.id, save: submit_url })) }}
                </div>
            </div>

        </div>

        {# <div class="modal-footer"> #}
        {# <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button> #}
        {# <button type="button" class="btn btn-info">Save changes</button> #}
        {# </div> #}
    </div>
</div>
</div>
