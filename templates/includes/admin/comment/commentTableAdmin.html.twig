<tr data-role="comment">
    <td>{{ comment.createdAt }}</td>
    <td>{{ comment.content }}</td>
    <td>{{ comment.user.username }}</td>
    <td>{{ comment.resource.name }}</td>
    <td>{{ comment.status }}</td>
    <td>
        <button type="button" class="btn btn-info" data-bs-toggle="modal"
                data-bs-target="#updateCommentModal-{{ comment.id }}"><i class="fa-solid fa-eye"></i>
        </button>
        {% if comment.status != 'Supprim√©' %}
            <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                    data-bs-target="#deleteCommentModal-{{ comment.id }}"><i class="fa-solid fa-trash-can"></i>
            </button>
        {% endif %}
    </td>
</tr>
{% set submit_url = path('comment_update', {'id': comment.id}) %}
{{ include('/includes/admin/comment/modal/updateCommentModal.html.twig', {url: submit_url}) }}

{{ include('/includes/admin/comment/modal/deleteCommentModal.html.twig') }}


